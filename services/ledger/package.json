{
  "name": "@tananetwork/ledger",
  "version": "0.1.0",
  "type": "module",
  "description": "Tana ledger service - User accounts, balances, and transactions",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:node": "tsx watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:node": "node --loader tsx src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "blockchain:flush": "bun run src/scripts/flush-blockchain.ts",
    "blockchain:genesis": "bun run src/scripts/create-genesis.ts",
    "blockchain:produce": "bun run src/scripts/produce-block.ts",
    "blockchain:verify": "bun run src/scripts/verify-blockchain.ts",
    "blockchain:listen": "bun run src/events/block-listener.ts",
    "pending": "bun run src/scripts/produce-block.ts",
    "block": "bun run src/scripts/produce-block.ts",
    "queue:clear": "bun run clear-redis-queue.ts",
    "seed:balances": "bun run src/scripts/seed-test-balances.ts",
    "sovereign": "bun run src/scripts/sovereign-dashboard.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@tananetwork/crypto": "link:@tananetwork/crypto",
    "@tananetwork/queue": "workspace:*",
    "drizzle-orm": "^0.30.0",
    "hono": "^4.0.0",
    "postgres": "^3.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.0"
  }
}
